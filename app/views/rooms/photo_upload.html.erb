<div class="row">
  <div class="col-md-3">
    <%= render 'room_sidebar' %>
  </div>
  <div class="col-md-9">
    <div class="card">
      <div class="card-header p-2">
        Photos
      </div>
      <div class="panel-body py-3">
        <div class="container">
          <div class="row">
            <div class="col-md-10 offset-md-1">
              <!-- photos Upload here-->
              <%= form_for @room, url: room_photos_path(@room), method: 'post', html: {multipart: true} do |f| %>
                <div class="row">
                  <div class="form-group">
                    <span class="btn btn-default btn-file text-babu">
                      <i class="fa fa-cloud-upload" aria-hidden="true"></i> Select Photos
                      <%= file_field_tag "images[]", type: :file, multiple: true, id: 'file-upload' %>
                    </span>
                  </div>
                </div>
                <div class="text-center">
                  <%= f.submit "Add Photos", class: "btn btn-normal", id: "img-upload" %>
                </div>
              <% end %>
            </div>
          </div>
          <div id="photos"><%= render 'photos/photos_list' %></div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(
    function(){
        $('#img-upload').attr('disabled',true);
        $('#file-upload').change(
            function(){
                if ($(this).val()){
                    $('#img-upload').removeAttr('disabled');
                }
                else {
                    $('#img-upload').attr('disabled',true);
                }
            });
    });
</script>
