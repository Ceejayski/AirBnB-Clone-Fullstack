<div class="row">
  <div class="col-md-3">
    <%= render 'room_sidebar' %>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading p-2">
        Pricing
      </div>
      <div class="panel-body py-3">
        <div class="container">
          <div class="row">
            <div class="col-md-10 offset-md-1">
              <%= form_for @room do |f| %>
                <div class="row">
                  <div class="form-group">
                    <label>Price</label>
                    <%= f.text_field :price, placeholder: "eg: $100", class: "form-control", required: true %>
                  </div>
                </div>
                <div class="text-center">
                  <%= f.submit "Save", class: "btn btn-form" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
